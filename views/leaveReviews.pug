extends base

block content
    main.main
        .review-container
            h1 Write a Review
            p Share your experience with us!
        form.review-form(id="review-form")
            input(type="hidden" id="tour" name="tour" value=`${tourId}`)

            .form-group
            label(for="rating") Rating:
            select#rating(name="rating" required)
                option(value="5") ⭐⭐⭐⭐⭐
                option(value="4") ⭐⭐⭐⭐
                option(value="3") ⭐⭐⭐
                option(value="2") ⭐⭐
                option(value="1") ⭐

            .form-group
            label(for="message") Your Review:
            textarea#review(name="review" rows="5" required placeholder="Write your review here...")

            button.review-btn(type="submit") Submit Review
